<% layout('/layouts/boilerplate') %>
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      align-items: center;
    }
    .filter {
      margin-right: 1rem;
      margin-top: 1.5rem;
      text-align: center;
      opacity: 0.8;
      cursor: pointer;
    }
    .filter:hover {
      opacity: 1;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .tax-info{
      display: none;
    }
    .tax-toggle{
      border: 0.5px solid #474747;
      border-radius: 1rem;
      padding: 0.6rem;
      box-shadow: 0 0 2px #474747;
      display: flex;
      align-items: center;
      cursor: pointer;
      margin-left: 3rem;
    }
  </style>
<body>
  <marquee><p style="font-family: 'Poppins', sans-serif; font-size: 13pt" class="txt text-danger bg-light-danger">Booking is not available right nowðŸ¥²</p></marquee>
    <div id="filters">
      <div class="filter sm-ms-3">
        <div><i class="fa-solid fa-fire-flame-curved  text-danger fs-4"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed text-danger fs-4"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city text-danger fs-4"></i></div>
        <p>Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain text-danger fs-4"></i></div>
        <p>Mountain</p>
      </div>
      <div class="filter sm-ms-3">
        <div><i class="fa-brands fa-fort-awesome text-danger fs-4"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming text-danger fs-4"></i></div>
        <p>Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground text-danger fs-4"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor text-danger fs-4"></i></div>
        <p>Farm</p>
      </div>
      <div class="filter sm-ms-4">
        <div><i class="fa-regular fa-snowflake text-danger fs-4"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-igloo text-danger fs-4"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tents text-danger fs-4"></i></div>
        <p>Tents</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach text-danger fs-4"></i></div>
        <p>Beach</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after tax</label>
        </div>
      </div>
      
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let listing of alllistings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card listing-card">
                <img class="card-img-top shadow" src="<%= listing.image.url %>" style="height: 20rem;" alt="Card image cap">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b><br>
                    <i class="fa-solid fa-indian-rupee-sign"></i><%= listing.price.toLocaleString('en-IN') %> /night
                    <i class="tax-info" >&nbsp;+18% GST</i>
                    <br>
                    <button type="button" class="btn btn-dark bookbtn">Book Now</button>
                  </p>
                </div>
              </div>
            </a>
              <% } %>
    </div>
</body>

<script>
  const taxSwitch=document.getElementById('flexSwitchCheckDefault')
  taxSwitch.addEventListener('click',()=>{
    let tax_info=document.getElementsByClassName('tax-info')
    for(info of tax_info){
      if(info.style.display!='inline'){
        info.style.display='inline'
      }else{
        info.style.display='none'
      }
    }
  })
</script>